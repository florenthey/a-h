{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@services/*": ["services/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["/node_modules/*", "/build/*"]
}
